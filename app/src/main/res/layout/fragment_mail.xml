<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        android:id="@+id/idBar">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:id="@+id/toolBar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Us"
                    android:textSize="25sp"
                    android:id="@+id/notifyFragmentTextView"
                    android:textColor="@android:color/white"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/options"
                    android:src="@drawable/ic_more_items_menu"
                    android:layout_alignParentEnd="true"
                    android:paddingTop="5sp"
                    android:layout_marginEnd="20sp"/>

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="75dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="0dp">

            <EditText
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etsubject"
                android:hint="What's the issue?"
                android:textColor="@color/colorPrimary"
                android:textColorHint="#C50346"
                android:padding="15dp"
                android:background="@drawable/bg_round"/>

            <EditText
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:id="@+id/etmessage"
                android:textColorHint="#C50346"
                android:hint="Describe it!"
                android:padding="15dp"
                android:gravity="top"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/bg_round"/>

            <Button
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btsend"
                android:textSize="25sp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:text="Send"
                android:textAlignment="center"
                android:padding="10dp"
                android:background="@drawable/customized_buttons"/>

    </LinearLayout>

</RelativeLayout>